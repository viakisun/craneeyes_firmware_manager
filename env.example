# ============================================
# Backend-only AWS S3 Configuration
# ⚠️ NEVER use VITE_ prefix for secrets!
# These variables are only accessible to Node.js server
# ============================================
AWS_REGION=ap-northeast-2
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...

# ============================================
# Backend-only Database Configuration
# ============================================
DB_HOST=your-rds-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=crane_firmware

# ============================================
# Legacy DB variables (for backward compatibility)
# TODO: Remove after updating all references
# ============================================
VITE_AWS_DB_HOST=your-rds-endpoint.rds.amazonaws.com
VITE_AWS_DB_PORT=5432
VITE_AWS_DB_USER=postgres
VITE_AWS_DB_PASSWORD=your-db-password
VITE_AWS_DB_NAME=crane_firmware

# ============================================
# Frontend-safe Configuration (Can be exposed to browser)
# ============================================
VITE_API_BASE_URL=http://localhost:3001/api

# ============================================
# Server Configuration
# ============================================
API_PORT=3001
SFTP_PORT=2222
SFTP_HOST_KEY=./sftp-host-key
